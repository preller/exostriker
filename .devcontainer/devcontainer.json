{
    "name": "My Python Environment with Exo-Striker Fork",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/desktop-lite:1": {
            "password": "exostriker",
            "vncPort": "5901",
            "webPort": "6080"
        }
    },
    "forwardPorts": [6080, 5901],
    "portsAttributes": {
        "6080": {
            "label": "Desktop (Web)",
            "onAutoForward": "notify"
        },
        "5901": {
            "label": "Desktop (VNC)",
            "onAutoForward": "openBrowser"
        }
    }
}
